<% layout("/layouts/bplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Create new list</h3><br><br>
            <form method="POST" action="/listings" novalidate class="needs-validation row g-3" enctype="multipart/form-data">

                <div class=" mb-3 row-8">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" placeholder="enter title " name="listing[title]" required>
                    <div class="valid-feedback ">
                        title look good
                    </div>
                </div>
                <div class="mb-3 row-8 ">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" placeholder="enter Description" name="listing[description]" required>
                    <div class="valid-feedback">
                        description look good
                    </div>
                </div>

                <div class="mb-3 row-8">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" type="file" class="form-control" required>
                </div>
                <div class="col-md-6 ">
                    <label for="price" class="form-label">Price</label>
                    <input class="form-control" placeholder="enter Price" name="listing[price]" required>
                    <div class="valid-feedback">
                        look good
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" class="form-control" placeholder="enter country " name="listing[country]" required>
                    <div class="valid-feedback">
                        look good
                    </div>
                </div>
                <div class="mb-3 row-8">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" placeholder="enter location" name="listing[location]" required>
                    <div class="valid-feedback">
                        look good
                    </div>
                </div>
        </div>
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value=" " id="invalidCheck" required>
                <label class="form-check-label" for="invalidCheck">
          Agree to terms and conditions
        </label>
                <div class="invalid-feedback">
                    You must agree before submitting.
                </div>
            </div>
        </div>
        <div class="col-12 ">
            <button class="btn btn-dark add-btn mb-3" type="submit">Submit form</button>
        </div>
        </form>
    </div>
    </div>
    <script src="/public/js/script.js"></script>