<% layout("/layouts/bplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Listing</h3><br>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="row g-3 needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="from-lable">Title</label>
                    <input name="listing[title]" value="<%=listing.title %>" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Title should be invalid
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="from-lable">Description</label>
                    <textarea name="listing[description]" class="form-control" required> value="<%=listing.description%>"></textarea>
                    <div class="invalid-feedback">
                        description should be invalid
                    </div>
                </div>
                <div class="mb-3">
                    <p>Origenal listing image</p><br>
                    <img src="<%= originalImageUrl %>">
                </div>
                <div class="mb-3">
                    <label for="image" class="from-lable">Uplaod new Image</label>
                    <input name="listing[image]" type="file" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="from-lable">Price</label>
                        <input name="listing[price]" value="<%=listing.price%>" type="text" class="form-control" required>
                        <div class="invalid-feedback">
                            Price should be invalid
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for=" country" class="from-lable">Country</label>
                        <input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control" required>
                        <div class="invalid-feedback">
                            country should be invalid
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="from-lable">Location</label>
                    <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control" required>
                </div>
                <br><br>
                <div class="col-12">
                    <button class="btn btn-dark add-btn mb-3" type="submit">Edit form</button>
                </div>
            </form>
        </div>
    </div>
    <script src="/public/js/script.js"></script>